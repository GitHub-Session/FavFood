@{
    var foodList = (List<FoodModel>)ViewBag.FoodList;
}

<a class="btn btn-dark" asp-controller="Food" asp-action="Create">Add Food</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Rating</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var food in foodList)
{
        <tr>
            <th scope="row">@food.Id</th>
            <td>@food.Name</td>
            <td>@food.Rating</td>
            <td><form asp-controller="food" asp-action="delete"><button class="btn btn-danger">x</button></form></td>
        </tr>
}
    
    </tbody>
</table>